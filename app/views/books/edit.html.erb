<h1>Editing Book</h1>

<%= form_with model: @book do |f| %>

  <h4>Title</h4>
    <p><%= f.text_field :title %></p>

  <h4>Body</h4>
    <p><%= f.text_area :body %></p>

    <p><%= f.submit 'Update Book' %></p>
      <%= link_to 'Show', book_path(@book) %>
      |
      <a href="/books">Back</a>
    </p>

<% end %>