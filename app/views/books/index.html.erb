<body>
    <p id="notice"></p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <% @books.each do |book| %>
    <tbody>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td>
      <%= link_to 'Show', book_path(book) %>
    </td>
    <td>
      <%= link_to 'Edit', edit_book_path(book) %>
    </td>
    <td>
      <%= link_to 'Destroy', book_path(book), method: :delete, data: { confirm: '本当に削除しますか？' } %>
    </td>
      </tr>
    </tbody>
  <% end %>
</table>

<h2>New book</h2>
  <div id="error_explanation">
    <%= flash[:alert] %>
  </div>
  <%= form_with model: @book, url: '/books', method: :post do |f| %>

  <label>Title</label>
  <p><%= f.text_field :title %></p>

  <label>Body</label>
  <p><%= f.text_area :body %></p>
  <p><%= f.submit 'Create Books' %></p>
</body>
<% end %>
