<h2>New book</h2>
</body>

<%= form_with model: @book, url: '/books', method: :post do |f| %>

  <p>Title</p>
  <p><%= f.text_field :title %></p>

  <p>Body</p>
  <p><%= f.text_area :body %></p>
  <p><%= f.submit 'Create Books' %></p>

<% end %>
